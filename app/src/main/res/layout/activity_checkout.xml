<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/white"
            app:titleTextColor="@android:color/black"
            android:theme="@style/ToolbarTheme"
            />

        <TextView
            android:id="@+id/delivery_option_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Delivery option"
            android:textSize="24sp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/delivery_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/delivery_option_txt"
            android:layout_marginTop="5dp"
            >


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:id="@+id/address_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="ibrahim korayem"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/address_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="4"
                    android:text="11 269 street, new maadi, cairo"
                    app:layout_constraintStart_toStartOf="@+id/address_user_name"
                    app:layout_constraintTop_toBottomOf="@+id/address_user_name"
                    />

                <TextView
                    android:id="@+id/address_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:maxLength="11"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="01234567890"
                    app:layout_constraintStart_toStartOf="@+id/address_details"
                    app:layout_constraintTop_toBottomOf="@+id/address_details"
                    />

                <TextView
                    android:id="@+id/change_address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change address"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/address_phone_number"
                    app:layout_constraintTop_toBottomOf="@+id/address_phone_number"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/shipment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipments"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@+id/delivery_card_view"
            app:layout_constraintTop_toBottomOf="@+id/delivery_card_view"
            android:layout_marginTop="10dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shipment_recycler_view"
            app:layout_constraintLeft_toLeftOf="@+id/shipment_txt"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/shipment_txt"/>

