<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">
        <TextView
            android:id="@+id/tv_delivery_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Delivery option"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp" />
         <android.support.v7.widget.CardView
             android:id="@+id/card_view1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/background"
             android:layout_marginTop="10dp"
             app:layout_constraintTop_toBottomOf="@id/tv_delivery_option">
             <android.support.constraint.ConstraintLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center">
                 <TextView
                     android:id="@+id/tv_full_name"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Amr ibrahim"/>
                 <TextView
                     android:id="@+id/tv_address"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="12st mansoura - egypt"
                     app:layout_constraintTop_toBottomOf="@id/tv_full_name"/>
                 <TextView
                     android:id="@+id/tv_phone_number"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="+0201092277653"
                     app:layout_constraintTop_toBottomOf="@id/tv_address"/>
                 <TextView
                     android:id="@+id/tv_change_address"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Change address"
                     android:textColor="#0703fc"
                     app:layout_constraintTop_toBottomOf="@id/tv_phone_number"/>
             </android.support.constraint.ConstraintLayout>
         </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_shipment"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/card_view1"
            app:layout_constraintBottom_toTopOf="@id/card_view2">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@id/rv_shipment"
            app:layout_constraintBottom_toTopOf="@id/continue_button">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/checkout_payment_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="80dp"
                    android:text="SHIPPING"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.35000002" />

                <TextView
                    android:id="@+id/subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="SUBTOTAL"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shipping" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="TOTAL"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subtotal"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:id="@+id/shipping_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0 L.E"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/shipping"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias=".7"
                    app:layout_constraintStart_toEndOf="@id/shipping"
                    app:layout_constraintTop_toTopOf="@id/shipping" />

                <TextView
                    android:id="@+id/subtotal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="290 L.E"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/subtotal"
                    app:layout_constraintStart_toStartOf="@id/shipping_price"
                    app:layout_constraintTop_toBottomOf="@+id/shipping_price"
                    app:layout_constraintTop_toTopOf="@id/subtotal" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="295 L.E"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/total"
                    app:layout_constraintStart_toEndOf="@id/total"
                    app:layout_constraintStart_toStartOf="@id/shipping_price"
                    app:layout_constraintTop_toBottomOf="@+id/subtotal_price"
                    app:layout_constraintTop_toTopOf="@+id/total" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue to Payment Methods"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@id/card_view2"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>