<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">


        <TextView
            android:id="@+id/delivery_option_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Delivery option"
            android:textSize="24sp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/delivery_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/delivery_option_txt"
            android:layout_marginTop="5dp"
            >


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:id="@+id/address_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    tools:text="ibrahim korayem"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/address_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="4"
                    tools:text="11 269 street, new maadi, cairo"
                    app:layout_constraintStart_toStartOf="@+id/address_user_name"
                    app:layout_constraintTop_toBottomOf="@+id/address_user_name"
                    />

                <TextView
                    android:id="@+id/address_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:maxLength="11"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="01234567890"
                    app:layout_constraintStart_toStartOf="@+id/address_details"
                    app:layout_constraintTop_toBottomOf="@+id/address_details"
                    />

                <TextView
                    android:id="@+id/change_address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change address"
                    android:textColor="@android:color/holo_blue_light"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/address_phone_number"
                    app:layout_constraintTop_toBottomOf="@+id/address_phone_number"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shipment_txt"
            android:text="Shipments"
            app:layout_constraintTop_toBottomOf="@+id/delivery_card_view"
            app:layout_constraintStart_toStartOf="@+id/delivery_card_view"
            android:textSize="24sp"/>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/shipment_recycler_view"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/shipment_txt"
            app:layout_constraintBottom_toTopOf="@id/card_view2">
        </android.support.v7.widget.RecyclerView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/checkout_payment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/sub_total_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:text="Sub Total"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.35000002" />


                <TextView
                    android:id="@+id/sub_total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5555.0 L.E"
                    android:textSize="20sp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    />

                <Button
                    android:id="@+id/payment_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue to Payment Methods"
                    app:layout_constraintTop_toBottomOf="@+id/sub_total_txt"
                    app:layout_constraintBottom_toBottomOf="parent"/>



            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</ScrollView>